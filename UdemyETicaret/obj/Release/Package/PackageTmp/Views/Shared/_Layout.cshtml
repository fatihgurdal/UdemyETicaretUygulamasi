@{
    UdemyETicaret.DB.Members logonUser = (UdemyETicaret.DB.Members)Session["LogonUser"];
}<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title - Udemy ETicaret</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif" rel="stylesheet">
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menulist" aria-expanded="false">
                    <span class="sr-only">Menü</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("index", "i", new { id = 0 })">Anasayfa</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="menulist">
                @Html.Partial("_MenuTopCategory", (List<UdemyETicaret.DB.Categories>)ViewBag.MenuCategories)

                <ul class="nav navbar-nav navbar-right">
                    @if (logonUser == null)
                    {
                        <li>
                            <a href="~/Account/Register">
                                <span class="glyphicon glyphicon-user"></span>&nbsp;Kayıt Ol
                            </a>
                        </li>
                        <li>
                            <a href="~/Account/Login">
                                <span class="glyphicon glyphicon-log-in"></span>&nbsp;Giriş
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="~/Account/Profil">
                                <span class="glyphicon glyphicon-user"></span>&nbsp;@($"{logonUser.Name} {logonUser.Surname}")
                            </a>
                        </li>
                    }

                    @{
                        List<UdemyETicaret.Models.i.BasketModels> basket = (List<UdemyETicaret.Models.i.BasketModels>)Session["Basket"];
                        if (basket == null)
                        {
                            basket = new List<UdemyETicaret.Models.i.BasketModels>();
                        }
                    }
                    <li class="dropdown">
                        <a href="#"
                           class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-shopping-cart"></span>&nbsp;Sepetim

                            <span class="badge">@basket.Count</span>
                            <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu">

                            @foreach (UdemyETicaret.Models.i.BasketModels item in basket)
                            {
                                <li>
                                    <a href="~/i/Product/@item.Product.Id">@item.Product.Name (@item.Count)</a>
                                </li>
                            }
                            <li class="divider" role="separator"></li>
                            <li><a href="~/i/Basket">Sepete Git</a></li>
                        </ul>

                    </li>
                    @if (logonUser != null)
                    {
                        <li>
                            <a href="~/i/Buy">
                                <span class="glyphicon glyphicon-usd"></span>&nbsp;Siparişlerim
                            </a>
                        </li>
                        @Html.Action("RenderMessage", "Message")

                        <li>
                            <a href="~/Account/logout">
                                <span class="glyphicon glyphicon-log-out"></span>&nbsp;Çıkış
                            </a>
                        </li>
                    }

                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
        @RenderBody()
    </div>

    <div class="well">
        <div class="row">

            <div class="col-md-4 col-md-offset-4 text-center">

                <a href="http://www.facebook.com" target="_blank">
                    <span class="fa fa-facebook-square fa-2x"></span>
                </a>

                <a href="http://www.twitter.com" target="_blank">
                    <span class="fa fa-twitter-square fa-2x"></span>
                </a>

                <a href="http://www.youtube.com" target="_blank">
                    <span class="fa fa-youtube-square fa-2x text-danger"></span>
                </a>

            </div>

            <div class="col-md-6 col-md-offset-3 text-center">
                <p>
                    Tüm Hakları Saklıdır.&copy; 2017
                </p>
                <p>
                    <a href="mailto:mail@mailcom" class="btn btn-info btn-sm">E-Posta Gönder</a>
                </p>
            </div>

        </div>
    </div>


</body>
</html>